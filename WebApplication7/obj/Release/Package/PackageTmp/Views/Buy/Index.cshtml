@model List<WebApplication7.Models.Car>
@{
    ViewBag.Title = "Buy";
}

<h2 style="font-size: 30px; text-align: center; margin-top: 30px"><b>Make an order</b></h2>

<div class="jumbotron">
    <table class="table" style="font-size: 14px">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
</div>
