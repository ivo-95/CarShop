@model WebApplication7.Models.Car
@{
    ViewBag.Title = "Sell";
}

<h2 style="font-size: 30px; text-align: center; margin-top: 30px"><b>Sell your car</b></h2>
<hr />

<div class="jumbotron">
    @using (Html.BeginForm("SellCar", "Sell"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>Enter your car details and we will add it to our catalogue.</p>
        <div class="form-group">
            <label style="font-size: 16px"><b>Brand:</b></label>
            @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Brand, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label style="font-size: 16px"><b>Model:</b></label>
            @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label style="font-size: 16px"><b>Price:</b></label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", data_val_number = "Please enter a number!" })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label style="font-size: 16px"><b>Year:</b></label>
            @Html.TextBoxFor(m => m.Year, new { @class = "form-control", data_val_number = "Please enter a number!" })
            @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label style="font-size: 16px"><b>Engine volume:</b></label>
            @Html.TextBoxFor(m => m.Volume, new { @class = "form-control", data_val_number = "Please enter a number!" })
            @Html.ValidationMessageFor(m => m.Volume, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div style="text-align: center">
                <input type="submit" class="btn btn-primary" value="Sell" style="min-width: 80px" />
                <input type="reset" class="btn btn-danger" value="Clear" style="min-width: 80px" />
            </div>
        </div>
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
