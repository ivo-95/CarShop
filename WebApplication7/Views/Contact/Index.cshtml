@model WebApplication7.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}

<h2 style="font-size: 30px; text-align: center; margin-top: 30px"><b>Contact us</b></h2>
<hr />

<h3>Contact form</h3>

<div class="jumbotron">
    @using (Html.BeginForm("Submit", "Contact"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="user" style="font-size: 16px"><b>Name:</b></label>
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="email" style="font-size: 16px"><b>E-mail:</b></label>
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="comment" style="font-size: 16px"><b>Comment:</b></label>
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", style = "min-width: 100%; min-height: 150px" })
            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
        </div>
        <p id="textInfo">@ViewBag.message</p>
        <div class="form-group">
            <div style="text-align: center">
                <input type="submit" class="btn btn-primary" value="Send" style="min-width: 80px" />
                <input type="reset" class="btn btn-danger" value="Clear" style="min-width: 80px" />
            </div>
        </div>
    }
</div>

